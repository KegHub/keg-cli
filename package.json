{
  "name": "keg-cli",
  "version": "5.2.2",
  "description": "Node.js CLI for working with Keg Repos and Taps",
  "main": "./keg-cli",
  "repository": "https://github.com/keghub/Keg-CLI",
  "author": "Lance Tipton",
  "license": "MIT",
  "bin": {
    "keg": "./keg",
    "keg-cli": "./keg-cli"
  },
  "files": [
    "containers/",
    "scripts/",
    "./keg",
    "./keg-cli",
    "src/"
  ],
  "preferGlobal": true,
  "engines": {
    "node": ">= 12.0.0"
  },
  "scripts": {
    "bundle": "node ./scripts/cli/bundle.js",
    "build": "pkg --public --options max-old-space-size=1024 --config ./pkg.config.json ./keg-cli-bundle.js",
    "clean:full": "yarn clean && yarn install",
    "clean": "yarn clean:lock && yarn cache clean && rimraf node_modules && npm cache clean --force",
    "clean:lock": "rimraf ./yarn.lock && rimraf ./package.lock",
    "format": "exit 0",
    "init:bash": "/bin/bash ./scripts/setup/mac-init.sh",
    "keg": "./keg",
    "postinstall": "node ./scripts/postinstall/index.js",
    "repos:install": "node ./scripts/postinstall/installRepos.js",
    "repos:link": "node ./scripts/postinstall/linkRepos.js",
    "test": "bash scripts/test.sh",
    "test:root": "yarn test:jest",
    "test:jest": "NODE_ENV=test jest --no-cache --verbose --maxWorkers=50%",
    "test:e2e": "NODE_ENV=test node ./scripts/cli/tests/index.js",
    "test:reports": "yarn test --coverage && yarn view:reports",
    "view:reports": "open reports/coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@keg-hub/args-parse": "^6.3.2",
    "@keg-hub/ask-it": "^1.0.0",
    "@keg-hub/cli-utils": "^0.4.2",
    "@keg-hub/docker-lib": "file:./repos/docker-lib",
    "@keg-hub/git-lib": "^0.0.2",
    "@keg-hub/jsutils": "^8.7.0",
    "@keg-hub/mutagen-lib": "file:./repos/mutagen-lib",
    "@keg-hub/parse-config": "^0.2.1",
    "@keg-hub/spawn-cmd": "^0.1.4",
    "axios": "0.24.0",
    "colors": "1.4.0",
    "esbuild-plugin-clear": "^1.0.1",
    "fs-extra": "10.0.0",
    "js-yaml": "4.1.0",
    "module-alias": "2.2.2",
    "ngrok": "4.2.2",
    "open": "8.4.0",
    "qrcode-terminal": "0.12.0",
    "rimraf": "3.0.2",
    "semver": "7.3.5",
    "shelljs": "0.8.4",
    "write-yaml-file": "4.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.14.0",
    "esbuild-copy-plugin": "^1.0.0",
    "esbuild-plugin-clean": "^0.5.0",
    "esbuild-plugin-path-alias": "^1.0.3",
    "expect": "26.6.2",
    "jest": "27.3.1",
    "jest-html-reporter": "3.1.3",
    "jest-sonar-reporter": "2.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "globals": {
      "__DEV__": true
    },
    "moduleNameMapper": {
      "^KegConst/envs$": "<rootDir>/src/__mocks__/constants/envs",
      "^KegConst(.*)$": "<rootDir>/src/constants$1",
      "^KegCrypto(.*)$": "<rootDir>/src/libs/crypto$1",
      "^KegMocks(.*)$": "<rootDir>/src/__mocks__$1",
      "^KegRoot(.*)$": "<rootDir>$1",
      "^KegScripts(.*)$": "<rootDir>/scripts$1",
      "^KegUtils(.*)$": "<rootDir>/src/utils$1"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/repos/*"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/scripts/**/__tests__/**/*.js?(x)"
    ],
    "transformIgnorePatterns": [
      ".*"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!**/__mocks__/**/*.{js}"
    ],
    "coverageDirectory": "reports/coverage",
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/setup/setupTests.js"
    ]
  }
}
